<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Translations</div>
    <!-- Table -->
    <table class="table">
        <thead>
        <tr>
            <th>Locale</th>
            <th>Domain</th>
            <th>Key</th>
            <th>Messages</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                {% for part in message.messages %}
                <td>{{ part.locale }}</td>
                <td>{{ message.domain }}</td>
                <td>{{ message.keyYml }}</td>
                <td>{{ part.messageText }}</td>
                <td>
                    <a href="{{ path('sleepness_translation_edit', {
                    '_locale': part.locale,
                    '_domain': message.domain,
                    '_key': message.keyYml  }) }}" class="glyphicon glyphicon-pencil">
                    </a>
                    <a href="#" class="glyphicon glyphicon-trash" data-toggle="modal" data-target="#delete" data-placement="top">
                    </a>
                    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    <h4 class="modal-title custom_align" id="Heading">Delete translation</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="alert alert-danger" role="alert">
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        Warning! If you delete this translation, some of your pages could be broken!
                                    </div>
                                    <div class="alert alert-warning">
                                        <span class="glyphicon glyphicon-warning-sign"></span>
                                        Are you sure you want to delete this translation?
                                    </div>
                                </div>
                                <div class="modal-footer ">
                                    <a href="{{ path('sleepness_translation_delete', {
                                    '_locale': part.locale,
                                    '_domain': message.domain,
                                    '_key': message.keyYml  }) }}" class="btn btn-success">
                                        <span class="glyphicon glyphicon-ok-sign"></span> Yes
                                    </a>
                                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(messages) }}
</div>
