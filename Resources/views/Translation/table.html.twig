<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Translations</div>

    <!-- Table -->
    <table class="table">
        <thead>
        <tr>
            <th>Locale</th>
            <th>Domain</th>
            <th>Key</th>
            <th>Messages</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                {% for part in message.messages %}
                <td>{{ part.locale }}</td>
                <td>{{ message.domain }}</td>
                <td>{{ message.keyYml }}</td>
                <td>{{ part.messageText }}</td>
                <td>
                    <a href="{{ path('sleepness_translation_edit', {
                    '_locale': part.locale,
                    '_domain': message.domain,
                    '_key': message.keyYml  }) }}" class="glyphicon glyphicon-pencil">
                    </a>
                    <a href="{{ path('sleepness_translation_delete', {
                    '_locale': part.locale,
                    '_domain': message.domain,
                    '_key': message.keyYml  }) }}" class="glyphicon glyphicon-trash">
                    </a>
                </td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(messages) }}
</div>
